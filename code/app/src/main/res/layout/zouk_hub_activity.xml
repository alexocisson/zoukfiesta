<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ch.hearc.zoukfiesta.activity.ZoukHubActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connecté à la Fiesta !"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <fragment
        android:id="@+id/fragment"
        android:name="ch.hearc.zoukfiesta.fragments.MusicQueueFragment"
        android:layout_width="406dp"
        android:layout_height="605dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="9dp"
        tools:layout="@layout/music_queue_fragment" />

    <fragment
        android:id="@+id/playerFragment"
        android:name="ch.hearc.zoukfiesta.fragments.PlayerFragment"
        android:layout_width="408dp"
        android:layout_height="117dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="1dp"
        tools:layout="@layout/player_fragment" />

</LinearLayout>

